@import "/app.wxss";

page {
    background: #ffffff;
}

.page-wait {
    margin-top: 30%;
    width: 100%;
    font-size: 15px;
}

.todo-card-opacity {
    opacity: 0.8;
}

.todolist-card-main {
    height: 100%;
    width: 100%;
}

.todolist-card-start {
    width: 20%;
    display: flex;
    align-items: center;
    justify-content: center;
}


/*----------------------------*/
.tomoto-box-one {
    transition: all 200ms ease;
    height: 100%;
    position: absolute;
    z-index: 1;
}

.tomoto-box-tree {
    position:relative;
    transition: all 200ms ease;
}

.tomoto-box-tree:hover .tomoto-box-one {
    filter: blur(10px);
}

.tomoto-box-card-line {
    margin-left: 0;
    width: 1rpx;
    height: 100%;
    border: white 3rpx dashed;
    opacity: 0.4;
}

.tomoto-box-card-logo{
    font-size: 130px;
    color: white;
    opacity: 0.6;
    transform: rotate(-15deg);
    width: 210rpx;
    overflow: hidden;
    margin-left: -20px;
}

.tomoto-box-card{
    opacity: 0.8;
    height: 70px;
    margin: 0 20rpx 20rpx 20rpx;
    background: burlywood;
}

.tomoto-box-card:hover{
    margin: 0 20rpx 20rpx 20rpx;
}

.tomoto-box-card-remark {
    font-size: 12px;
    color: black;
    opacity: 0.5;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-wrap: break-word;
    white-space: normal !important;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    text-align:left;
}
